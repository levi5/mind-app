<%= link_to 'New Content', new_content_path %>

<h1>Contents</h1>

<%= form_tag(contents_path, method: :get) do %>
    <div class="field">
            <%= label_tag :tags %>
            <%= select_tag 'tags[]', options_for_select(current_user.tags.pluck(:name), params[:tags]), class: 'select2' , multiple: 'multiple', style: 'width: 40%' %>
    </div>

    <div class="actions">
        <%= submit_tag('Search') %>
    <div>

<% end %>
<BR>
<BR>

<ul>
    <% @contents.each do |content| %>
        <li>
            <%= link_to 'Show', content_path(content) %>
            <%= link_to 'Edit', edit_content_path(content) %>
            <%= link_to 'Delete', content_path(content), method: :delete, data: {confirm: 'Are you sure?'} %>
            Title: <%= content.title %>
            Description: <%= content.description %>
            Tagas: <%= content.tags.pluck(:name).join(', ') %>
        </li>
    <% end %>
</ul>