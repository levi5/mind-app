<div class="container">

<div style="width:100%; height:auto; padding:10px 0px; display:flex; justify-content:space-between; align-center:center;"> <h1>Contents</h1>
    <%= link_to 'New Content', new_content_path, class: 'btn btn-outline-primary', style: 'height:40px; display:flex; justify-content:center; align-center:center;' %>
</div>

<%= form_tag(contents_path, method: :get) do %>
    <div class="form-group">
            <%= label_tag :tags %>
            <%= select_tag 'tags[]', options_for_select(current_user.tags.pluck(:name), params[:tags]), class: 'select2 form-control' , multiple: 'multiple' %>
    </div>

    <div class="actions">
        <%= submit_tag('Search', class: 'btn btn-secondary') %>
    <div>

<% end %>
<BR>
<BR>

<ul>
    <% @contents.each do |content| %>
        <li class="p-2" style="list-style:none;">
            <%= link_to 'Show',  content_path(content), class: 'btn btn-primary' %>
            <%= link_to 'Edit', edit_content_path(content), class: 'btn btn-success' %>
            <%= link_to 'Delete', content_path(content), method: :delete, data: {confirm: 'Are you sure?'}, class: 'btn btn-danger' %>
            Title: <%= content.title %>
            Description: <%= content.description %>
            Tagas: <%= content.tags.pluck(:name).join(', ') %>
        </li>
    <% end %>
</ul>


  <!-- Content here -->
</div>